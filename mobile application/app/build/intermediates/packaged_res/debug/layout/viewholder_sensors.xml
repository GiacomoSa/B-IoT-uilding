<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_sensor_recview"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginTop="20dp"
    android:elevation="2dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#FCAF58">

        <ImageView
            android:id="@+id/imageView_sensor"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:maxHeight="100dp"
            android:src="@drawable/ic_lightbulb" />

        <TextView
            android:id="@+id/textView_type_sensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_sensor"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:text="Type of sensor"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_sensor_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_type_sensor"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:layout_marginBottom="12sp"
            android:text="value"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>

