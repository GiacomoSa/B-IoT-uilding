<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_myrooms_recview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/arancionino">

        <ImageView
            android:id="@+id/imageView_stanza"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:maxHeight="100dp"
            android:src="@drawable/room_logo" />

        <TextView
            android:id="@+id/textView_Nomestanza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_stanza"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:layout_marginBottom="12sp"
            android:text="NOME STANZA"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>

